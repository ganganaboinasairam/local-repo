package testproject.auth;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

//ValidateChatTokenServlet.java (main app)
@WebServlet("/validate-chat-token")
public class ValidateChatTokenServlet extends HttpServlet {
 protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
     String token = req.getParameter("chatToken");
     String custId = req.getParameter("custId");
     if (token == null || custId == null) {
         resp.sendError(HttpServletResponse.SC_BAD_REQUEST);
         return;
     }
     boolean ok = testproject.auth.ChatTokenManager.validateAndUse(token, custId, true); // mark used on validate
     if (ok) {
         resp.setStatus(HttpServletResponse.SC_OK);
         resp.getWriter().write("OK");
     } else {
         resp.sendError(HttpServletResponse.SC_FORBIDDEN, "Invalid or expired token");
     }
 }
}
